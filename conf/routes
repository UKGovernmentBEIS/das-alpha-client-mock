# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

# Routes for the API
GET         /                         controllers.ClientController.index
GET         /logout                   controllers.ClientLoginController.logout
GET         /login                    controllers.ClientLoginController.showLogin
POST        /login                    controllers.ClientLoginController.handleLogin

GET         /levy-declarations        controllers.LevyController.showEmpref(empref:String)

POST        /claimScheme              controllers.ClientController.claimScheme
GET         /remove-scheme            controllers.ClientController.removeScheme(empref:String)
GET         /claimCallback            controllers.ClientController.claimCallback(code:Option[String])
